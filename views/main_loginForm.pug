extends layout

block content

    //
        Page for logging into the mobile app server to manage it.
    //

    h1.ui.center.aligned.header= title

    //
        Form that lets the user log in.
    //
    form.ui.form(action='/login', method='POST')
        .field
            label Username <i class="question circle icon"></i><div class="ui popup">Your current username. If you have forgotten it, or do not yet have an account, please contact an administrator.</div>
            input(name='username', type='text')
        .field
            label Password <i class="question circle icon"></i><div class="ui popup">Your current password. If you have forgotten it, please contact an administrator to reset it for you.</div>
            input(name='password', type='password')
        input.ui.primary.button(value='Log in', type='submit')
    p
        // a.ui.button(href="/") Return to home

    script.
        // Script for the login page.

        // If there was an error message from the user's login attempt, show
        // an alert.
        var submitErrorMessage = "#{submitErrorMessage}";
        if (submitErrorMessage) {
            alert(submitErrorMessage);
        }